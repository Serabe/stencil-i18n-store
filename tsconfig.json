{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017", "es2018", "es2019"],
    "outDir": "build",
    "declarationDir": "dist",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "files": ["src/index.ts"],
  "exclude": ["node_modules", "src/**/*.(test|spec).ts"]
}
